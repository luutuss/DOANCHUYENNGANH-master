@{  

    // Ép kiểu dữ liệu từ ViewBag
    var aboutDental = ViewBag.AboutDental as WebsiteDental.Models.AboutDental;
    var imageGallery = ViewBag.ImageGallery as List<WebsiteDental.Models.ImageGallery>;
}



<div class="kim-dental-container">
    <!-- Header Section -->
    <h1 class="kim-title">@aboutDental?.Title</h1>

    <!-- Blue Info Box -->
    <div class="kim-info-box">
        <p style="color: white !important">
            <span class="kim-highlight">@aboutDental?.Content</span> 
        </p>
    </div>

    <!-- Description Section -->
    <div class="kim-description">
        <p style="color: #0a4776 !important">
            @aboutDental?.Description
        </p>
    </div>

    <!-- Board Introduction -->
    <div class="kim-board-intro">
        <div class="kim-board-title">
            <h2>GIỚI THIỆU HỆ THỐNG SỮA CỦA CHÙNG TÔI<br>LTT-MILK</h2>
        </div>

        <div class="kim-board-details">
            <div class="kim-text-content">
                <p style="color: white !important">
                    <h2>LTT-Milk – Chăm sóc sức khỏe gia đình bạn từ ly sữa đầu tiên!</h2>
                    Tự tin là nhà cung cấp nguồn dinh dưỡng tốt nhất. Với sự liên kết công nghệ tiên tiến và tiếp nhận nguồn nguyên liệu từ các quốc gia nổi tiếng về lĩnh vực sữa bột, sữa nước cao cấp, phối hợp cùng những chuyên gia dinh dưỡng trong nước để tạo ra những dòng sản phẩm cao cấp phù hợp với người tiêu dùng tại Việt Nam.
                    Để đáp ứng nhu cầu phát triển & bảo vệ cơ thể ngày càng cao của mỗi người Công ty chúng tôi không ngừng nghiên cứu và phát triển nâng cao chất lượng của từng sản phẩm. Đồng thời Công ty chúng tôi cam kết với khách hàng về những yếu tố sau:

                    – Đặt quyền lợi khách hàng lên trên hết.
                    – Tạo ra những dòng sản phẩm chất lượng cao, giá cả hợp lý.
                    – Thực hiện nghiêm túc vệ sinh an toàn thực phẩm
                    – Nhiều chính sách ưu đãi cho hệ thống nhà phân phối
                    – Dịch vụ giao hàng nhanh chóng.
                </p>
            </div>
            <div class="kim-image-gallery">
                <div class="image-item">
                    <img src="https://media.vietnamplus.vn/images/7255a701687d11cb8c6bbc58a6c80785188b8b092c45fb79804cdec2b7655c35416e2fc1e2aef3e563fb19ef6e478282/Hinh_62.jpg" alt="ảnh 15 năm">
                </div>
                <div class="image-item">
                    <img src="https://giaiphaptaichinh.net/upload/images/dieu-can-cho-doanh-nghiep-cua-ban-la-tam-nhin-su-menh-muc-tieu.png" alt="tầm nhìn và sứ mệnh">
                </div>
            </div>
        </div>
    </div>
</div>

