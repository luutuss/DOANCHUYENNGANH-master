 @model IEnumerable<WebsiteDental.Models.ImageGallery>
<!--  ImageGallery  -->

<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h1 class="fw-bold text-primary mb-3">CÔNG TRÌNH THIẾT KẾ SIÊU THI SỮA TIÊU CHUẨN</h1>
            <p class="text-muted">Một số công trình thiết kế hệ thống cửa hàng sữa mà LTT-Milk thực hiện.</p>
        </div>
    </div>

    <div class="project-slider">
        <div id="projectCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <div class="row-display">
                        <!-- Dự án 4 -->
                        @foreach (var n in Model)
                        {
                            <div class="project-item">
                                <div class="project-card">
                                    <div class="project-image">
                                        <img src="@n.ImageUrl" alt="">
                                        <div class="project-overlay">
                                            <div class="project-info">
                                                <h3>@n.Description</h3>
                                                <p>Thiết kế sang trọng, hiện đại với ánh sáng tự nhiên</p>
                                                <a href="#" class="btn btn-outline-light btn-sm">Xem chi tiết</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="row-display">
                        <!-- Dự án 5 -->
                        @foreach (var n in Model)
                        {
                            <div class="project-item">
                                <div class="project-card">
                                    <div class="project-image">
                                        <img src="@n.ImageUrl" alt="">
                                        <div class="project-overlay">
                                            <div class="project-info">
                                                <h3>@n.Description</h3>
                                                <p>Thiết kế sang trọng, hiện đại với ánh sáng tự nhiên</p>
                                                <a href="#" class="btn btn-outline-light btn-sm">Xem chi tiết</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }               
                    </div>
                </div>
            </div>

            <!-- Điều khiển -->
            <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="#" class="btn btn-primary px-4 py-2">Xem thêm<i class="fas fa-arrow-right ms-2"></i></a>
        </div>
    </div>
</div>


<!-- ImageGallery Finish -->