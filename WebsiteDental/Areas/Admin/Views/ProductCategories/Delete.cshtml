@model WebsiteDental.Models.ProductCategory
@{
    ViewData["Title"] = "Xóa danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #dc3545;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .delete-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
        border-left: 4px solid #dc3545;
    }

    .delete-warning {
        background-color: #fff8f8;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #ffcccc;
    }

        .delete-warning i {
            color: #dc3545;
            margin-right: 10px;
            font-size: 18px;
        }

    .category-info {
        display: flex;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .category-image {
        width: 100px;
        height: 100px;
        border-radius: 5px;
        object-fit: cover;
        margin-right: 20px;
        border: 1px solid #e0e0e0;
    }

    .category-header {
        flex: 1;
    }

    .category-name {
        font-size: 20px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 5px;
    }

    .category-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 12px;
        margin-bottom: 10px;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    .details-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .info-item {
        margin-bottom: 8px;
    }

    .info-label {
        font-weight: 500;
        color: #666;
        margin-bottom: 3px;
    }

    .info-value {
        color: #333;
    }

    .text-block {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .action-buttons {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            color: white;
        }

    .btn-secondary {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: #212529;
        }

    /* Đáp ứng thiết bị di động */
    @@media(max - width: 992px)

    {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .category-info {
        flex-direction: column;
    }

    .category-image {
        margin-right: 0;
        margin-bottom: 15px;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Xóa danh mục sản phẩm</h4>
        <p>Bạn có chắc chắn muốn xóa danh mục sản phẩm này?</p>
    </div>

    <div class="delete-container">
        <div class="delete-warning">
            <i class="fa fa-exclamation-triangle"></i>
            <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Việc xóa danh mục có thể ảnh hưởng đến các sản phẩm liên quan.
        </div>
    

        <!-- Thông tin chi tiết -->
        <div class="details-section">
            <h3 class="section-title">Thông tin danh mục</h3>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Tên danh mục</div>
                    <div class="info-value">@Model.CategoryName</div>
                </div>              
                <div class="info-item">
                    <div class="info-label">Ngày tạo</div>
                    <div class="info-value">@(Model.CreatedAt.HasValue? Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa có")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày cập nhật</div>
                    <div class="info-value">@(Model.UpdatedAt.HasValue? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa có")</div>
                </div>
            </div>
        </div>

        <!-- Mô tả -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="details-section">
                <h3 class="section-title">Mô tả danh mục</h3>
                <div class="text-block">
                    @Model.Description
                </div>
            </div>
        }

        <!-- Action buttons -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="action-buttons">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>