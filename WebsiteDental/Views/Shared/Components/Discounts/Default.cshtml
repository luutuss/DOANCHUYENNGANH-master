@model IEnumerable<WebsiteDental.Models.Discount>
<!-- Discounts Start -->
<div class="container-fluid feature bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Khuyễn Mãi Độc Quyền</h4>
            <h1 class="display-4 mb-4">"Hãy nâng cao sức khỏe cho mọi lứa tuổi."</h1>
            <p class="mb-0" style="color: #0a4776;">
                Đảm bảo an toàn, chất lượng trong từng sản phẩm! Vì sức khỏe cộng đồng.
            </p>
        </div>
    </div>
</div>
<div class="medcheck-container-wrapper" id="medcheck-wrapper">
    <div class="medcheck-container" id="medcheck-packages">

        @foreach (var n in Model)
        {
            <!-- Package 5 -->
            <div class="medcheck-card" id="medcheck-package5">
                <div class="medcheck-image">
                <div class="medcheck-discount-badge">@n.DiscountPercentage</div>
                <div class="medcheck-women-day-tag">LTT-Milk</div>
                <img src="@n.ImageUrl" alt="Khám tim mạch">
                @* <div class="medcheck-price-tag">@n.OriginalPrice</div> *@
            </div>
            <div class="medcheck-content">
                @* <h3 class="medcheck-title">@n.DiscountCode</h3> *@
                @* <div class="medcheck-price-container">
                    <span class="medcheck-current-price">@n.OriginalPrice</span>
                    <span class="medcheck-original-price">@n.FinalPrice</span>
                </div> *@
                <div class="medcheck-expiry-date">Từ @n.StartDate đến: @n.EndDate</div>
                    <a href="/ContactForms" class="medcheck-hotline">Xem ngay</a>

                <div class="medcheck-phone-number">0835731781</div>
                <div class="medcheck-type">Hệ thống Sữa</div>
            </div>
        </div>

        }
        <div class="medcheck-container-wrapper">
            <div class="medcheck-container" id="medcheck-packages">
                <!-- Các card của bạn vẫn giữ nguyên -->
                <div class="medcheck-card" id="medcheck-package5">
                    <!-- Nội dung card -->
                </div>
            </div>
        </div>
    </div>
    <!-- Tùy chọn: Thêm gợi ý cuộn -->
    <div class="scroll-hint">Cuộn ngang để xem thêm</div>
</div>
<!-- Discounts End -->