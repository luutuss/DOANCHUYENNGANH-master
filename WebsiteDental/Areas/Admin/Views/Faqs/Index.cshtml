@model IEnumerable<WebsiteDental.Models.Faq>

@{
    ViewData["Title"] = "Danh sách câu hỏi thường gặp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
        padding-bottom: 5px;
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 5px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
    }

        .table-header h5 {
            margin: 0;
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px;
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px;
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            display: inline-block;
            margin: 0 3px;
            padding: 4px 6px;
            border-radius: 4px;
            text-decoration: none;
            color: #1a3b5d;
        }

            .action-links a:hover {
                background-color: #f0f0f0;
            }

    .status-active {
        color: green;
        font-weight: bold;
    }

    .status-inactive {
        color: red;
        font-weight: bold;
    }

    @@media(max - width: 992px) {
            .content-wrapper {
                margin-left: 0;
                padding: 10px;
            }
        }
    </style>

    <div class="content-wrapper">
        <div class="page-intro">
            <h4>Quản lý câu hỏi thường gặp</h4>
            <p>Cập nhật thông tin câu hỏi và trả lời thường gặp nhanh chóng và hiệu quả.</p>
        </div>

        <div class="table-container">
            <div class="table-header">
                <h5>Danh sách câu hỏi</h5>
                <a asp-action="Create" class="create-btn">
                    <i class="fa fa-plus-circle"></i> Thêm mới
                </a>
            </div>

            <table class="compact-table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Question)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Answer)</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        @Html.DisplayFor(modelItem => item.Question)
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        @Html.DisplayFor(modelItem => item.Answer)
                                    </div>
                                </td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <span class="status-active">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="status-inactive">Ngừng hoạt động</span>
                                    }
                                </td>
                                <td class="action-links">
                                    <a asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 15px;">
                                Chưa có câu hỏi nào. Vui lòng thêm mới!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
