@model WebsiteDental.Models.MenuPage
@{
    ViewData["Title"] = "Chỉnh sửa menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin bottom */
        padding-bottom: 5px; /* Giảm padding bottom */
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 15px; /* Khoảng cách dưới phần giới thiệu */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 15px; /* Giảm padding */
        margin-bottom: 20px;
    }

    .form-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px; /* Giảm margin */
        padding-bottom: 10px;
        border-bottom: 1px solid #e9ecef;
    }

        .form-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
            color: #1a3b5d;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label, .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 5px;
        display: block;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #1a3b5d;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(26, 59, 93, 0.25);
        }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .btn-primary {
        background-color: #1a3b5d;
        border-color: #1a3b5d;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            border-color: #2c5282;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .form-actions {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chỉnh sửa menu trang website</h4>
        <p>Cập nhật thông tin menu và vị trí hiển thị trên trang web.</p>
    </div>

    <div class="form-container">
        <div class="form-header">
            <h5>Thông tin menu</h5>
        </div>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PageName" class="form-label">Tiêu đề menu</label>
                                <input asp-for="PageName" class="form-control" />
                                <span asp-validation-for="PageName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Position" class="form-label">Vị trí</label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Url" class="form-label">Đường dẫn</label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ParentId" class="form-label">Menu cha</label>
                                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                                    <option value="">-- Không có menu cha --</option>
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsActive" class="form-label">Trạng thái</label>
                        <select asp-for="IsActive" class="form-control">
                            <option value="true">Kích hoạt</option>
                            <option value="false">Không kích hoạt</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>