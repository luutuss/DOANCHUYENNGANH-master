@model WebsiteDental.Models.ServiceFeature
@{
    ViewData["Title"] = "Chỉnh sửa tính năng dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #1a3b5d;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #6c757d;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-title {
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid #e0e0e0;
        color: #1a3b5d;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 500;
        color: #495057;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 8px 12px;
        font-size: 14px;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .btn-submit {
        background-color: #1a3b5d;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #2c5282;
        }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        color: #1a3b5d;
        text-decoration: none;
        font-size: 14px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .checkbox-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .checkbox-container input[type="checkbox"] {
            margin-right: 8px;
        }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chỉnh sửa tính năng dịch vụ</h4>
        <p>Cập nhật thông tin cho tính năng dịch vụ.</p>
    </div>

    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề tính năng" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về tính năng"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Icon" class="control-label">Biểu tượng</label>
                <input asp-for="Icon" class="form-control" placeholder="Ví dụ: fa fa-tooth" />
                <span asp-validation-for="Icon" class="text-danger"></span>
                <small class="text-muted">Nhập tên class biểu tượng FontAwesome (ví dụ: fa fa-tooth)</small>
            </div>

            <div class="form-group">
                <label asp-for="Order" class="control-label">Thứ tự hiển thị</label>
                <input asp-for="Order" class="form-control" type="number" placeholder="Nhập số thứ tự" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <div class="form-group checkbox-container">
                <input asp-for="IsActive" type="checkbox" />
                <label asp-for="IsActive">Kích hoạt</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="back-link">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>
