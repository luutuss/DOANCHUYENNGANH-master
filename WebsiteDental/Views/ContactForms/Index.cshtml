@model WebsiteDental.Models.ContactForm


<!-- Contact Start -->
<div class="container-fluid contact bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Liên hệ cửa hàng Website-Milk 💙</h4>
            <h1 class="display-4 mb-4">Liên hệ để được tư vấn từ LTT-Milk 💙</h1>
        </div>
        <div class="row g-5">
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="contact-img d-flex justify-content-center">
                    <div class="contact-img-inner">
                        <img style="margin-top: 140px !important;"
                             src="~/assets/img/Doctors/A2.webp" class="img-fluid w-100" alt="Image">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                <div>
                    <h4 class="text-primary">ĐỂ LẠI THÔNG TIN ĐỂ ĐƯỢC TƯ VẤN</h4>
                    <p class="mb-4">Bạn đang cần tư vấn về các loại sữa phù hợp? Hãy liên hệ ngay với Website-Milk để được hỗ trợ nhanh chóng! <a class="text-primary fw-bold" href="https://htmlcodex.com/contact-form">Download Now</a>.</p>

                    <!-- LÀM PHẦN LIÊN HỆ CỦA WEBSITE-Milk -->
                    
                    <form asp-action="Create" method="post">
                        <div class="row g-3">
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" asp-for="Name" placeholder="Your Name">
                                    <label asp-for="Name" style="color: #444;">Nhập tên:</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-0" asp-for="Email" placeholder="Your Email">
                                    <label asp-for="Email" style="color: #444;">Nhập Gmail:</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" asp-for="Phone" placeholder="Phone">
                                    <label asp-for="Phone" style="color: #444;">Để lại số điện thoại:</label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" asp-for="Message" placeholder="Leave a message here" style="height: 120px"></textarea>
                                    <label asp-for="Message" style="color: #444;">Nội dung:</label>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100 py-3">GỬI NGAY</button>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
            <div class="col-12">
                <div>
                    <div class="row g-4">
                        <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.2s">
                            <div class="contact-add-item">
                                <div class="contact-icon text-primary mb-4">
                                    <i class="fas fa-map-marker-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h4>ĐỊA CHỈ</h4>
                                    <p class="mb-0">+) Số 138, Nguyễn Thiếp, Trung Đô, Thành Phố Vinh, Việt Nam.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.4s">
                            <div class="contact-add-item">
                                <div class="contact-icon text-primary mb-4">
                                    <i class="fas fa-envelope fa-2x"></i>
                                </div>
                                <div>
                                    <h4>GMAIL</h4>
                                    <p class="mb-0">luuthitu2004@gmail.com</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.6s">
                            <div class="contact-add-item">
                                <div class="contact-icon text-primary mb-4">
                                    <i class="fa fa-phone-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h4>ĐIỆN THOẠI</h4>
                                    <p class="mb-0">(+084) 835731781</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.8s">
                            <div class="contact-add-item">
                                <div class="contact-icon text-primary mb-4">
                                    <i class="fab fa-firefox-browser fa-2x"></i>
                                </div>
                                <div>
                                    <h4>FACBOOK</h4>
                                    <p class="mb-0">Website-Milk</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 wow fadeInUp" data-wow-delay="0.2s">
                <div class="rounded">
                    <iframe class="rounded w-100"
                            style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387191.33750346623!2d-73.97968099999999!3d40.6974881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sbd!4v1694259649153!5m2!1sen!2sbd"
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
