@model WebsiteDental.Models.BlogComment
@{
    ViewData["Title"] = "Chi tiết bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin bottom */
        padding-bottom: 5px; /* Giảm padding bottom */
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 15px; /* Khoảng cách với form */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-title {
        margin-bottom: 15px;
        color: #1a3b5d;
        font-weight: 600;
    }

    .detail-group {
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 3px;
    }

    .detail-value {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        background-color: #f8f9fa;
    }

    .btn-primary {
        background-color: #1a3b5d;
        border-color: #1a3b5d;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #2c5282;
        }

    .back-link {
        display: inline-block;
        margin-top: 10px;
        color: #1a3b5d;
        text-decoration: none;
        margin-right: 10px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .form-container {
        padding: 15px;
    }

    }

    .image-preview {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 100%;
        max-height: 150px;
        overflow: hidden;
    }

        .image-preview img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chi tiết bình luận</h4>
        <p>Thông tin chi tiết về bình luận trong hệ thống</p>
    </div>

    <div class="form-container">
        <div class="row">
            <div class="col-md-6">
                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.Post)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Post.Id)
                    </div>
                </div>

                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.User)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.User.Id)
                    </div>
                </div>

                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.Email)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
            </div>

            <div class="col-md-6">
              @*   <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Hình ảnh người bình luận</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="image-preview border rounded p-2">
                                <img src="@Model.Img" class="img-fluid rounded" alt="User image"
                                     style="height: 120px; object-fit: cover;" />
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">@Html.DisplayFor(model => model.Img)</small>
                            </div>
                        </div>
                    </div>
                </div> *@

                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.Comment)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Comment)
                    </div>
                </div>

                    <div class="detail-group">
                        <div class="detail-label">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </div>
                        <div class="detail-value">
                            @if (Model.IsActive == true)
                            {
                                <span>Hiển thị</span>
                            }
                            else
                            {
                                <span>Ẩn</span>
                            }
                        </div>
                    </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="detail-group">
                    <div class="detail-label">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.CreatedAt)
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fa fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="back-link">
                <i class="fa fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>