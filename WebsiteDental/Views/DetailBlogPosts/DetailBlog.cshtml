

@section Styles {
    <link href="~/assets/css/DetailBlogPosts.css" rel="stylesheet">
}
@model WebsiteDental.Models.BlogDetailViewModel
@{
    ViewData["Title"] = Model.BlogPost.Title;
}

<div class="main-wrapper">
    <!-- Advertisement Banner Top -->
    <div class="ad-banner">
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-secondary text-white">Quảng cáo</span>
            <a href="#" class="text-muted small">X</a>
        </div>
        <p class="mb-1 fw-bold">Mua Sữa Định Kỳ - Ưu Đãi 30% Tháng 4</p>
        <a href="#" class="btn btn-sm btn-outline-primary">Đặt ngay</a>
    </div>

    <div class="hospital-section">
        <div class="main-content">
            <div class="image-category">
                <img src="@Model.BlogPost.FeaturedImage" alt="Blog Image" class="img-fluid" />
            </div>

            <h1 class="mb-3 mt-3">@Model.BlogPost.Title</h1>
           
           <h2>I. NỘI DUNG</h2>
            <h3> @Model.BlogPost.Description</h3>
            <h2>II. MÔ TẢ</h2>
            <ul>
                <li>@Model.BlogPost.Content</li>
            </ul>

            <!-- Newsletter Signup -->
            <div class="newsletter-signup mb-4">
                <p class="fw-bold mb-2">Đăng ký nhận bản tin sức khỏe hàng tuần</p>
                <div class="input-group">
                    <input type="email" class="form-control form-control-sm" placeholder="Email của bạn">
                    <button class="btn btn-sm btn-primary">Đăng ký</button>
                </div>
            </div>

            <div class="container py-3">
                <div class="row">
                    <div class="col-12">
                        <h2>I. NỘI DUNG</h2>
                        <h3> Nhiệm vụ của Thế Giới Sữa:</h3>
                        <p>Phân phối sản phẩm dinh dưỡng chất lượng với giá cả tốt nhất và phù hợp nhất cho khách hàng.</p>
                        <p>Trở thành thương hiệu hàng đầu trong lĩnh vực cung cấp các sản phẩm dinh dưỡng uy tín.</p>
                        <p>Đồng hành cùng khách hàng, xem khách hàng là những người thân của mình, phục vụ, tư vấn, giải đáp các thắc mắc, lo lắng cho khách hàng.</p>
                        <p>Chế độ hậu mãi, chăm sóc khách hàng tốt nhất khu vực.</p>
                        <p>Đào tạo nhân viên trở thành tư vấn viên dinh dưỡng chuyên nghiệp, có tâm.</p>

                        <h2>II. Đặc tính các sản phẩm mà Thế Giới Sữa phân phối:</h2>
                        <ul>
                      
                                <li>Hàng chính hãng công ty, có hóa đơn chưng từ.</li>
                                <li>Nói không với hàng giả hàng kém chất lượng.</li>
                                <li>Bảo quản sản phẩm theo đề nghị của nhà sản xuất.</li>
                                <li>Giá cả đảm bảo tốt nhất thị trường.</li>
                                <li>Hàng hóa được bảo quản và kiểm tra date nghiêm ngặt.</li>
                        </ul>

                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-12 text-center">
                        <img src="https://bizweb.dktcdn.net/100/416/540/themes/839121/assets/slide-img5.jpg?1747714392528" alt="thế giới sữa - sữa gì cũng có" class="img-fluid rounded mb-2">
                    </div>
                </div>

                <!-- In-Content Advertisement -->
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="ad-banner">
                            <small class="text-muted">Nội dung được tài trợ</small>
                            <p class="mb-1">Thế giới sữa - sữa gì cũng có</p>
                            <a href="#" class="btn btn-sm btn-outline-success">Xem thêm</a>
                        </div>
                    </div>
                </div>             
            </div>
        </div>

        <div class="sidebar">
            <div class="sidebar-section">
                <div class="working-time bg-primary text-white text-center rounded">
                    <h3 style="color: white !important;">THỜI GIAN LÀM VIỆC</h3>
                    <p style="color: white !important;">Hành chính: 7h30 - 19h30</p>
                    <p style="color: white !important;">Tư vấn: 7h30 - 17h00</p>
                </div>
            </div>

            <!-- Advertisement in Sidebar -->
            <div class="ad-sidebar mb-3">
                <span class="badge bg-secondary text-white mb-1">Quảng cáo</span>
                <img src="https://bizweb.dktcdn.net/100/416/540/themes/839121/assets/slide-img1.jpg?1747714392528" alt="advertisement" class="img-fluid mb-2">
                <p class="mb-1 small">Ưu đãi tháng 5 rộn ràng</p>
                <a href="#" class="btn btn-sm btn-outline-primary">Tìm hiểu thêm</a>
            </div>

            <div class="sidebar-section">
                <h3 class="mb-3">BÀI VIẾT MỚI</h3>

                @foreach (var post in Model.RelatedPosts)
                {
                    <a asp-controller="DetailBlogPosts" asp-action="DetailBlog" asp-route-id="@post.Id" class="text-decoration-none text-dark">
                        <div class="post d-flex align-items-center border-bottom pb-2">
                            <img src="@post.FeaturedImage" alt="@post.Title" class="me-3" style="width: 80px; height: 60px; object-fit: cover;">
                            <div>
                                <h5 class="mb-1">@post.Title</h5>
                                <small class="text-muted">@post.CreatedAt?.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </a>
                }
            </div>



            <div class="sidebar-section">
                <div class="registration-form">
                    <h3 class="text-center mb-2">ĐĂNG KÝ NHẬN TƯ VẤN</h3>
                    <form>
                        <div class="mb-2">
                            <input type="text" class="form-control form-control-sm" placeholder="Họ và tên (*)" required>
                        </div>
                        <div class="mb-2">
                            <input type="tel" class="form-control form-control-sm" placeholder="Số điện thoại (*)" required>
                        </div>
                        <div class="mb-2">
                            <input type="email" class="form-control form-control-sm" placeholder="Email">
                        </div>
                        <div class="mb-2">
                            <textarea class="form-control form-control-sm" placeholder="Triệu chứng" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-sm w-100">ĐĂNG KÝ NGAY</button>
                    </form>
                </div>
            </div>

            <!-- Popular Services Box -->
            <div class="sidebar-section">
                <h3 class="mb-2">DỊCH VỤ PHỔ BIẾN</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0 py-2 border-bottom">
                        <a href="#" class="d-flex align-items-center text-decoration-none">
                            <span class="badge bg-primary rounded-pill me-2">1</span>
                            <span class="text-dark small">Tư vấn miễn phí</span>
                        </a>
                    </li>
                    <li class="list-group-item px-0 py-2 border-bottom">
                        <a href="#" class="d-flex align-items-center text-decoration-none">
                            <span class="badge bg-primary rounded-pill me-2">2</span>
                            <span class="text-dark small">Đặt hàng theo định kỳ</span>
                        </a>
                    </li>
                    <li class="list-group-item px-0 py-2 border-bottom">
                        <a href="#" class="d-flex align-items-center text-decoration-none">
                            <span class="badge bg-primary rounded-pill me-2">3</span>
                            <span class="text-dark small">Khuyến mãi đặc biệt</span>
                        </a>
                    </li>
                    <li class="list-group-item px-0 py-2">
                        <a href="#" class="d-flex align-items-center text-decoration-none">
                            <span class="badge bg-primary rounded-pill me-2">4</span>
                            <span class="text-dark small">Dịch vụ kèm ăn sáng</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!--HIỆN THỊ COMMENT CỦA KHÁCH HÀNG COMMENT LÊN BÀI VIÊT-->
    <div class="comments-section mb-3">
        <h3 class="mb-3">BÌNH LUẬN</h3>

        @if (Model.Comments.Any())
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="comment mb-2">
                    <div class="d-flex">
                        <img src="~/assets/img/Services/anh1.jpg" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                        <div>
                            <h5 class="mb-0">@comment.Name <small class="text-muted ms-1">(@comment.Email)</small></h5>
                            <p class="mb-1">@comment.Comment</p>
                            <small class="text-muted">
                                @(comment.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Không xác định")
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="small">Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
        }
    </div>

    <!--PHẦN BÌNH LUẬN COMMENT CỦA CHI TIẾT BÀI VIÊT-->
    <div class="comment-form">
        <div class="card">
            <div class="card-header bg-secondary text-white py-2">
                <h5 class="mb-0 fs-6">Để lại một bình luận</h5>
            </div>
            <div class="card-body">
                <form method="post" action="/DetailBlogPosts/AddComment">
                    <div class="alert alert-info py-2" role="alert">
                        <small>Email của bạn sẽ không được hiển thị công khai. Các trường bắt buộc được đánh dấu *</small>
                    </div>

                    <input type="hidden" name="BlogId" value="@Model.BlogPost.Id" />

                    <div class="mb-2">
                        <label for="commentTextarea" class="form-label small">Bình luận *</label>
                        <textarea class="form-control form-control-sm" id="commentTextarea" name="CommentText" rows="3" required></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label for="nameInput" class="form-label small">Tên *</label>
                            <input type="text" class="form-control form-control-sm" id="nameInput" name="UserName" required>
                        </div>

                        <div class="col-md-4 mb-2">
                            <label for="emailInput" class="form-label small">Email *</label>
                            <input type="email" class="form-control form-control-sm" id="emailInput" name="UserEmail" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-secondary btn-sm">Gửi Bình Luận</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bottom Advertisement -->
    <div class="ad-banner mb-3">
        <span class="badge bg-secondary text-white mb-1">Quảng cáo</span>
        <div class="row align-items-center">
            <div class="col-3">
                <img src="https://bizweb.dktcdn.net/100/416/540/themes/839121/assets/slide-img1.jpg?1747714392528" alt="dental clinic ad" class="img-fluid rounded">
            </div>
            <div class="col-9 text-start">
                <p class="mb-1 fw-bold">Ưu đãi mua sữa - Giảm 20% khi đặt lịch online</p>
                <p class="small mb-1">Áp dụng từ 15/04/2025 đến 30/04/2025</p>
                <a href="#" class="btn btn-sm btn-primary">Đặt ngay</a>
            </div>
        </div>
    </div>
</div>