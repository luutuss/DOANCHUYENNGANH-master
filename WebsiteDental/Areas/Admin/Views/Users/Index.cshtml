@model IEnumerable<WebsiteDental.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin bottom */
        padding-bottom: 5px; /* Giảm padding bottom */
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 5px; /* Giảm khoảng cách */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin */
    }

        .table-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px; /* Giảm padding */
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px; /* Giảm kích thước chữ */
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px; /* Giảm padding */
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px; /* Giảm padding */
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            display: inline-block;
            margin: 0 3px;
            padding: 4px 6px;
            border-radius: 4px;
            text-decoration: none;
            color: #1a3b5d;
        }

            .action-links a:hover {
                background-color: #f0f0f0;
            }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        object-fit: cover;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper {
            margin-left: 0;
            padding: 10px;
        }
    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý người dùng</h4>
        <p>Xem và quản lý thông tin tài khoản, phân quyền và trạng thái người dùng.</p>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h5>Danh sách người dùng</h5>
            <a asp-action="Create" class="create-btn">
                <i class="fa fa-plus-circle"></i> Thêm mới
            </a>
        </div>
        <table class="compact-table">
            <thead>
                <tr>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Ảnh đại diện</th>
                    <th>Địa chỉ</th>
                    <th>Ngày tạo</th>
                    <th>Ngày cập nhật</th>
                    <th>Trạng thái</th>
                    <th>Vai trò</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.Username)
                            </div>
                        </td>
                        <td>
                            <div style="max-width: 180px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.Email)
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Avatar))
                            {
                                <img src="@item.Avatar" alt="@item.Username" class="user-avatar" />
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td>
                            <div style="max-width: 180px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.Address)
                            </div>
                        </td>
                        <td>@(item.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>@(item.UpdatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-inactive">Ngừng hoạt động</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>