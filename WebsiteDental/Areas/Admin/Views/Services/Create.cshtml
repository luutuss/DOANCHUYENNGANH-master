@model WebsiteDental.Models.Service
@{
    ViewData["Title"] = "Thêm mới dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-intro {
        margin-bottom: 15px; /* Khoảng cách với form */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 500;
        margin-bottom: 5px;
        color: #495057;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 8px 12px;
        width: 100%;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-primary {
        background-color: #1a3b5d;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            color: white;
        }

    .btn-secondary {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: #212529;
        }

    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .form-container {
        padding: 15px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Thêm mới dịch vụ</h4>
        <p>Điền đầy đủ thông tin chi tiết để tạo một dịch vụ mới trong hệ thống</p>
    </div>

    <div class="form-container">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Thông tin cơ bản -->
            <div class="form-section">
                <h3 class="section-title">Thông tin cơ bản</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ServiceName" class="control-label">Tên dịch vụ</label>
                            <input asp-for="ServiceName" class="form-control" placeholder="Nhập tên dịch vụ" />
                            <span asp-validation-for="ServiceName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả chi tiết về dịch vụ"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Thông tin bổ sung -->
            <div class="form-section">
                <h3 class="section-title">Thông tin bổ sung</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label">Giá dịch vụ (VNĐ)</label>
                            <input asp-for="Price" class="form-control" placeholder="Nhập giá dịch vụ" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Duration" class="control-label">Thời gian thực hiện (phút)</label>
                            <input asp-for="Duration" class="form-control" placeholder="Nhập thời gian thực hiện" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DisplayOrder" class="control-label">Thứ tự hiển thị</label>
                            <input asp-for="DisplayOrder" class="form-control" placeholder="Nhập thứ tự hiển thị" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">

                            @*      Xử lý ảnh  *@
                          
                                <div class="card mb-4">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Hình ảnh sản phẩm</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="fas fa-image"></i> ảnh
                                            </label>
                                            <input type="file" id="imageUpload" class="form-control" accept="image/*" />
                                            <input type="hidden" asp-for="Image" id="ImagePath" />
                                            <span asp-validation-for="Image" class="text-danger"></span>

                                            <div class="mt-3 text-center">
                                                <img id="imagePreview" src="~/assets/img/default.jpg" class="img-fluid border rounded" style="max-height: 200px; object-fit: contain;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                         

                    </div>
                </div>
            </div>

            <!-- Nút thao tác -->
            <div class="action-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check"></i> Tạo mới
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>


    <script>
        document.getElementById("imageUpload").addEventListener("change", function (event) {
            let file = event.target.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("currentImage").src = e.target.result;
                };
                reader.readAsDataURL(file);

                // Gửi ảnh lên server
                let formData = new FormData();
                formData.append("file", file);

                fetch("/Admin/Products/UploadImage", {
                    method: "POST",
                    body: formData
                })
                .then(response => response.text())
                .then(imagePath => {
                    document.getElementById("ImagePath").value = imagePath; // Gán đường dẫn ảnh vào input ẩn
                })
                .catch(error => console.error("Lỗi upload ảnh:", error));
            }
        });
    </script>