@model WebsiteDental.Models.ProductCategory
@{
    ViewData["Title"] = "Chỉnh sửa danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #1a3b5d;
            outline: none;
            box-shadow: 0 0 0 2px rgba(26, 59, 93, 0.1);
        }

    .form-check {
        margin-bottom: 10px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .form-full-width {
        grid-column: span 2;
    }

    .textarea-control {
        min-height: 100px;
        resize: vertical;
    }

    .action-buttons {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-primary {
        background-color: #1a3b5d;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            color: white;
        }

    .btn-secondary {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: #212529;
        }

    .img-upload-container {
        margin-bottom: 15px;
    }

    .img-preview {
        width: 150px;
        height: 150px;
        border-radius: 5px;
        border: 1px solid #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        background-color: #f9f9f9;
        overflow: hidden;
    }

        .img-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }

    /* Đáp ứng thiết bị di động */
    @@media(max - width: 992px) {
        .content-wrapper {
            margin-left: 0;
            padding: 10px;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-full-width {
            grid-column: span 1;
        }
    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chỉnh sửa danh mục sản phẩm</h4>
        <p>Cập nhật thông tin cho danh mục sản phẩm</p>
    </div>

    <div class="form-container">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <!-- Thông tin cơ bản -->
            <div class="form-section">
                <h3 class="section-title">Thông tin cơ bản</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Tên danh mục</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group form-full-width">
                        <label asp-for="Description" class="control-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control textarea-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                  @*   <div class="form-group">
                        <label asp-for="CreatedAt" class="control-label"></label>
                        <input asp-for="CreatedAt" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label asp-for="UpdatedAt" class="control-label"></label>
                        <input asp-for="UpdatedAt" class="form-control" />
                        <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <!-- Action buttons -->
            <div class="action-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>