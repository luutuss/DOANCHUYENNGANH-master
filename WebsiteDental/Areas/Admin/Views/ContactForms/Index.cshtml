@model IEnumerable<WebsiteDental.Models.ContactForm>

@{
    ViewData["Title"] = "Danh sách liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin bottom */
        padding-bottom: 5px; /* Giảm padding bottom */
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 5px; /* Giảm khoảng cách */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin */
    }

        .table-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px; /* Giảm padding */
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px; /* Giảm kích thước chữ */
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px; /* Giảm padding */
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px; /* Giảm padding */
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            display: inline-block;
            margin: 0 3px;
            padding: 4px 6px;
            border-radius: 4px;
            text-decoration: none;
            color: #1a3b5d;
        }

            .action-links a:hover {
                background-color: #f0f0f0;
            }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .message-content {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý liên hệ khách hàng</h4>
        <p>Xem và phản hồi các yêu cầu liên hệ từ khách hàng.</p>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h5>Danh sách liên hệ</h5>          
        </div>
        <table class="compact-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    <th>
                        Ngày gửi
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            <div class="message-content">
                                @Html.DisplayFor(modelItem => item.Message)
                            </div>
                        </td>
                            <td>
                                @(item.SubmittedAt != null? item.SubmittedAt?.ToString("dd/MM/yyyy HH:mm") : "Chưa có")
                        </td>

                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-active">Chưa xử lý</span>
                            }
                            else
                            {
                                <span class="status-inactive">Đã xử lý</span>
                            }
                        </td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                          
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>