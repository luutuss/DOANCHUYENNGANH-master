@model WebsiteDental.Models.AboutDental
@{
    ViewData["Title"] = "Chi tiết About Dental";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-intro {
        margin-bottom: 15px; /* Khoảng cách với form */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .details-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .about-info {
        display: flex;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .about-image {
        width: 150px;
        height: 150px;
        border-radius: 5px;
        object-fit: cover;
        margin-right: 20px;
        border: 1px solid #e0e0e0;
    }

    .about-header {
        flex: 1;
    }

    .about-title {
        font-size: 24px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 5px;
    }

    .about-description {
        font-size: 16px;
        color: #666;
        margin-bottom: 10px;
    }

    .about-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 12px;
        margin-bottom: 10px;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    .details-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .info-item {
        margin-bottom: 8px;
    }

    .info-label {
        font-weight: 500;
        color: #666;
        margin-bottom: 3px;
    }

    .info-value {
        color: #333;
    }

    .text-block {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .stat-box {
        background-color: #f0f7ff;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        margin-bottom: 15px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: 700;
        color: #1a3b5d;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #666;
    }

    .action-buttons {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
    }

        .btn i {
            margin-right: 5px;
        }

    .btn-primary {
        background-color: #1a3b5d;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            color: white;
        }

    .btn-secondary {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: #212529;
        }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .about-info {
        flex-direction: column;
    }

    .about-image {
        margin-right: 0;
        margin-bottom: 15px;
        width: 100px;
        height: 100px;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chi tiết About</h4>
        <p>Xem thông tin chi tiết về nội dung giới thiệu của cửa hàng</p>
    </div>

    <div class="details-container">
        <!-- Thông tin tổng quan -->
        <div class="about-info">
            <div class="about-image-container">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.Title" class="about-image" />
                }
                else
                {
                    <div class="about-image" style="display: flex; align-items: center; justify-content: center; background-color: #f0f0f0;">
                        <i class="fa fa-info-circle" style="font-size: 50px; color: #aaa;"></i>
                    </div>
                }
            </div>
            <div class="about-header">
                <h2 class="about-title">@Model.Title</h2>
                <div class="about-description">@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description)</div>
                @if (Model.IsActive == true)
                {
                    <div class="about-status status-active">Hoạt động</div>
                }
                else
                {
                    <div class="about-status status-inactive">Không hoạt động</div>
                }
                <div class="about-icon">
                    <span>Icon: <strong>@(string.IsNullOrEmpty(Model.IconPath) ? "Không có" : Model.IconPath)</strong></span>
                </div>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="details-section">
            <h3 class="section-title">Thống kê</h3>
            <div class="info-grid">
                <div class="stat-box">
                    <div class="stat-value">@Model.StatValue1</div>
                    <div class="stat-label">@Model.StatLabel1</div>
                </div>
            </div>
        </div>

        <!-- Nội dung chi tiết -->
        <div class="details-section">
            <h3 class="section-title">Nội dung</h3>
            <div class="text-block">
                @if (!string.IsNullOrEmpty(Model.Content))
                {
                    @Model.Content
                }
                else
                {
                    <span class="text-muted">Chưa cập nhật</span>
                }
            </div>
        </div>

        <!-- Thông tin hệ thống -->
        <div class="details-section">
            <h3 class="section-title">Thông tin hệ thống</h3>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Ngày tạo</div>
                        <div class="info-value">    @(Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày cập nhật</div>
                        <div class="info-value">    @(Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</div>
                </div>
            </div>
        </div>

        <!-- Action buttons -->
        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fa fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>