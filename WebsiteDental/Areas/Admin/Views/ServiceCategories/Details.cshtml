@model WebsiteDental.Models.ServiceCategory
@{
    ViewData["Title"] = "Chi tiết danh mục dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #1a3b5d;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #6c757d;
        }

    .detail-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .detail-title {
        margin-top: 0;
        margin-bottom: 15px;
        font-size: 18px;
        font-weight: 600;
        color: #1a3b5d;
        padding-bottom: 10px;
        border-bottom: 1px solid #e0e0e0;
    }

    .detail-table {
        width: 100%;
        border-collapse: collapse;
    }

        .detail-table tr {
            border-bottom: 1px solid #e9ecef;
        }

            .detail-table tr:last-child {
                border-bottom: none;
            }

        .detail-table th {
            padding: 12px 15px;
            text-align: left;
            width: 30%;
            font-weight: 600;
            color: #495057;
            background-color: #f8f9fa;
            vertical-align: top;
        }

        .detail-table td {
            padding: 12px 15px;
            vertical-align: top;
        }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #e0e0e0;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.5;
        border-radius: 4px;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        color: #fff;
        background-color: #1a3b5d;
        border-color: #1a3b5d;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            border-color: #2c5282;
            color: #fff;
        }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #fff;
        }

    .btn-outline {
        color: #1a3b5d;
        background-color: transparent;
        border-color: #1a3b5d;
    }

        .btn-outline:hover {
            background-color: #f8f9fa;
            color: #1a3b5d;
        }

    .image-preview {
        max-width: 200px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 3px;
        margin-top: 5px;
    }

    .status-badge {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .detail-container {
        padding: 15px;
    }

    .detail-table th {
        width: 40%;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chi tiết danh mục dịch vụ</h4>
        <p>Xem thông tin chi tiết về danh mục dịch vụ</p>
    </div>

    <div class="detail-container">
        <h5 class="detail-title">Thông tin danh mục: @Model.CategoryName</h5>

        <table class="detail-table">
            <tr>
                <th>Tên danh mục</th>
                <td>@Model.CategoryName</td>
            </tr>
            <tr>
                <th>Mô tả</th>
                <td>@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</td>
            </tr>
            <tr>
                <th>Hình ảnh</th>
                <td>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div>@Model.ImageUrl</div>
                        <img src="@Model.ImageUrl" class="image-preview" alt="@Model.CategoryName" />
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Thứ tự hiển thị</th>
                <td>@Model.DisplayOrder</td>
            </tr>
            <tr>
                <th>Trạng thái</th>
                <td>
                    @if (Model.IsActive == true)
                    {
                        <span class="status-badge status-active">Hoạt động</span>
                    }
                    else
                    {
                        <span class="status-badge status-inactive">Không hoạt động</span>
                    }
                </td>
            </tr>
        </table>

        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-outline">
                <i class="fa fa-arrow-left"></i> Quay lại danh sách
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fa fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary" style="margin-left: 5px;">
                    <i class="fa fa-trash"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>