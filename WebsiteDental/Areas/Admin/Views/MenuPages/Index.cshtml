@model IEnumerable<WebsiteDental.Models.MenuPage>
@{
    ViewData["Title"] = "Quản lý Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-intro {
        margin-bottom: 5px; /* Giảm khoảng cách */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin */
    }

        .table-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px; /* Giảm padding */
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px; /* Giảm kích thước chữ */
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px; /* Giảm padding */
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px; /* Giảm padding */
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            display: inline-block;
            margin: 0 3px;
            padding: 4px 8px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 12px;
        }

    .action-edit {
        background-color: #1a3b5d;
        color: white;
    }

    .action-details {
        background-color: #17a2b8;
        color: white;
    }

    .action-delete {
        background-color: #dc3545;
        color: white;
    }

    .action-links a:hover {
        opacity: 0.9;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý Menu - Hiển thị trực quan hệ thống phân cấp</h4>
        <p>Cập nhật, sắp xếp và phân cấp menu cho người dùng dễ dàng điều hướng.</p>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h5>Danh sách menu</h5>
            <a asp-action="Create" class="create-btn">
                <i class="fa fa-plus-circle"></i> Thêm mới
            </a>
        </div>
        <table class="compact-table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tiêu đề</th>
                    <th>Đường dẫn</th>
                    <th>Vị trí</th>
                    <th>Trạng thái</th>
                    <th>Menu cha</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @{
                int i = 1;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>
                            <div style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.PageName)
                            </div>
                        </td>
                        <td>
                            <div style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @Html.DisplayFor(modelItem => item.Url)
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Position)</td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-inactive">Ngừng hoạt động</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Parent.Id)</td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>