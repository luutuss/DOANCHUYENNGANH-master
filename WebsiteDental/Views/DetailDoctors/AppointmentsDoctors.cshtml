@model WebsiteDental.Models.AppointmentsDoctorsModelView

@section Styles {
    <link href="~/assets/css/DetailDoctors.css" rel="stylesheet">
}
<div class="container py-5">
    <div class="form-container">
        <div class="row">
            <div class="col-md-4">
                <div class="doctor-card">
                    <img src="@Model.ImageUrl" alt="Bác sĩ Hoàng Đăng Mịch" class="img-fluid">                          
                    <div class="doctor-name">
                        <div class="doctor-name"> @Model.DoctorName </div>
                    </div>
            
                    <div class="doctor-title">Tiến sĩ - Chuyên khoa Nội tiết</div>
                </div>
            </div>
            <div class="col-md-8">
                <h2 class="text-center mb-4">Đặt Lịch Khám Bệnh</h2>



                <form asp-controller="AppointmentsDoctors" asp-action="BookAppointment" method="post">
                    <!-- Gửi ID bác sĩ -->
                    <input type="hidden" name="DoctorId" value="@Model.DoctorId" />

                    <div class="mb-3">
                        <label class="form-label required-label">Bệnh viện/Phòng khám</label>
                        <select class="form-select" required>
                            <option selected>Website-Dental</option>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label required-label">Thời gian khám</label>
                            <input type="date" class="form-control" name="AppointmentDate" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label required-label">Chuyên khoa</label>
                            <input type="text" class="form-control" value="@Model.Specialization" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label required-label">Bác sĩ</label>
                        <input type="text" class="form-control" value="@Model.DoctorName" readonly>
                    </div>

                    <h4 class="mt-4 mb-3">Thông Tin Khách Hàng</h4>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label required-label">Họ và tên</label>
                            <input type="text" class="form-control" name="CustomerName" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label required-label">Giới tính</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Sex" value="Nam" required>
                                    <label class="form-check-label">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Sex" value="Nữ" required>
                                    <label class="form-check-label">Nữ</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label required-label">Ghi chú</label>
                            <input type="text" class="form-control" name="Notes">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label required-label">Số điện thoại</label>
                            <input type="tel" class="form-control" name="Phone" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email">
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="privacy-policy" required>
                        <label class="form-check-label" for="privacy-policy">
                            Tôi đã đọc và đồng ý với Chính sách bảo vệ dữ liệu cá nhân của Vinmec
                        </label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg">Gửi thông tin</button>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>
