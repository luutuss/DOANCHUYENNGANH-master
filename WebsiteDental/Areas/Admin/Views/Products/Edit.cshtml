@model WebsiteDental.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #1a3b5d;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #555;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-header {
        font-size: 16px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 1px solid #eaeaea;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -10px;
        margin-left: -10px;
    }

    .form-group {
        margin-bottom: 15px;
        padding-right: 10px;
        padding-left: 10px;
    }

        .form-group.col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .form-group.col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }

        .form-group.col-md-12 {
            flex: 0 0 100%;
            max-width: 100%;
        }

    .control-label {
        font-weight: 500;
        margin-bottom: 5px;
        display: block;
        color: #495057;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 8px 12px;
        font-size: 14px;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 4px;
        display: block;
    }

    .btn-primary {
        color: #fff;
        background-color: #1a3b5d;
        border-color: #1a3b5d;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            border-color: #2c5282;
        }

    .btn-back {
        color: #1a3b5d;
        background-color: #f0f0f0;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        margin-right: 10px;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
            text-decoration: none;
        }

    .form-actions {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #eaeaea;
    }

    .image-preview {
        margin-top: 10px;
        max-width: 100%;
        height: auto;
    }

    .custom-file {
        position: relative;
        display: inline-block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        margin-bottom: 0;
    }

    .custom-file-input {
        position: relative;
        z-index: 2;
        width: 100%;
        height: calc(1.5em + 0.75rem + 2px);
        margin: 0;
        opacity: 0;
    }

    .custom-file-label {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        z-index: 1;
        height: calc(1.5em + 0.75rem + 2px);
        padding: 8px 12px;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 4px;
        cursor: pointer;
    }

        .custom-file-label::after {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            z-index: 3;
            display: block;
            height: calc(1.5em + 0.75rem);
            padding: 8px 12px;
            line-height: 1.5;
            color: #495057;
            content: "Chọn file";
            background-color: #e9ecef;
            border-left: inherit;
            border-radius: 0 4px 4px 0;
        }

    .checkbox-container {
        padding: 8px 0;
    }

    .checkbox-label {
        display: inline-flex;
        align-items: center;
        cursor: pointer;
    }

    .checkbox-input {
        margin-right: 8px;
    }

    .read-only-field {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .form-group.col-md-6, .form-group.col-md-4 {
        flex: 0 0 100%;
        max-width: 100%;
    }

    }


        .image-preview img {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            background: #f8f9fa;
        }
   

</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chỉnh sửa sản phẩm</h4>
        <p>Cập nhật thông tin chi tiết về sản phẩm trong hệ thống.</p>
    </div>

    <div class="form-container">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-section-header">Thông tin cơ bản</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ProductName" class="control-label">Tên sản phẩm</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Type" class="control-label">Loại sản phẩm</label>
                    <input asp-for="Type" class="form-control" placeholder="Nhập loại sản phẩm" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CategoryId" class="control-label">Danh mục</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Trạng thái</label>
                    <div class="checkbox-container">
                        <label class="checkbox-label">
                            <input asp-for="IsActive" class="checkbox-input" />
                            Kích hoạt sản phẩm
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-section-header">Thông tin giá cả</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Price" class="control-label">Giá (VNĐ)</label>
                    <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PriceDiscount" class="control-label">Giá khuyến mãi (VNĐ)</label>
                    <input asp-for="PriceDiscount" class="form-control" placeholder="Nhập giá khuyến mãi" />
                    <span asp-validation-for="PriceDiscount" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PriceIncrease" class="control-label">Giá tăng thêm</label>
                    <input asp-for="PriceIncrease" class="form-control" placeholder="Nhập giá tăng thêm" />
                    <span asp-validation-for="PriceIncrease" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section-header">Thông tin kho hàng</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Stock" class="control-label">Số lượng trong kho</label>
                    <input asp-for="Stock" class="form-control" placeholder="Nhập số lượng trong kho" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Quantity" class="control-label">Số lượng</label>
                    <input asp-for="Quantity" class="form-control" placeholder="Nhập số lượng" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section-header">Thông tin khác</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Rating" class="control-label">Đánh giá</label>
                    <input asp-for="Rating" class="form-control" placeholder="Nhập đánh giá" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

           @*      Xử lý ảnh  *@
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Hình ảnh sản phẩm</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Image" class="form-label fw-semibold">Image</label>
                                            <input type="file" class="form-control" id="imageUpload" name="imageFile" />
                                            <input type="hidden" asp-for="Image" id="ImagePath" />
                                            <span asp-validation-for="Image" class="text-danger small"></span>
                                            <div class="form-text">Select image file up to 2MB. Format: JPG, PNG</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <label class="form-label fw-semibold">Current Image</label>
                                            <div class="image-preview border rounded p-2">
                                                <img id="currentImage" src="@Model.Image"
                                                     class="img-fluid rounded" alt="Product image"
                                                     style="height: 120px; object-fit: cover;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="form-section-header">Thông tin hệ thống</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CreatedAt" class="control-label">Ngày tạo</label>
                    <input asp-for="CreatedAt" class="form-control read-only-field" readonly />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="UpdatedAt" class="control-label">Cập nhật lần cuối</label>
                    <input asp-for="UpdatedAt" class="form-control read-only-field" readonly />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-back">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

    <script>
        document.getElementById("imageUpload").addEventListener("change", function (event) {
            let file = event.target.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("currentImage").src = e.target.result;
                };
                reader.readAsDataURL(file);

                // Gửi ảnh lên server
                let formData = new FormData();
                formData.append("file", file);

                fetch("/Admin/Products/UploadImage", {
                    method: "POST",
                    body: formData
                })
                .then(response => response.text())
                .then(imagePath => {
                    document.getElementById("ImagePath").value = imagePath; // Gán đường dẫn ảnh vào input ẩn
                })
                .catch(error => console.error("Lỗi upload ảnh:", error));
            }
        });
    </script>
  
