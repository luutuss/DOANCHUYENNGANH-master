@model WebsiteDental.Models.CommentDoctor
@{
    ViewData["Title"] = "Chỉnh sửa bình luận bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #1a3b5d;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #555;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-header {
        font-size: 16px;
        font-weight: 600;
        color: #1a3b5d;
        margin-bottom: 15px;
        padding-bottom: 5px;
        border-bottom: 1px solid #eaeaea;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -10px;
        margin-left: -10px;
    }

    .form-group {
        margin-bottom: 15px;
        padding-right: 10px;
        padding-left: 10px;
    }

        .form-group.col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .form-group.col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }

        .form-group.col-md-12 {
            flex: 0 0 100%;
            max-width: 100%;
        }

    .control-label {
        font-weight: 500;
        margin-bottom: 5px;
        display: block;
        color: #495057;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 8px 12px;
        font-size: 14px;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 4px;
        display: block;
    }

    .btn-primary {
        color: #fff;
        background-color: #1a3b5d;
        border-color: #1a3b5d;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #2c5282;
            border-color: #2c5282;
        }

    .btn-back {
        color: #1a3b5d;
        background-color: #f0f0f0;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        margin-right: 10px;
        display: inline-block;
    }

        .btn-back:hover {
            background-color: #e0e0e0;
            text-decoration: none;
        }

    .form-actions {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #eaeaea;
    }

    .read-only-field {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    .form-group.col-md-6, .form-group.col-md-4 {
        flex: 0 0 100%;
        max-width: 100%;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Chỉnh sửa bình luận bác sĩ</h4>
        <p>Cập nhật thông tin chi tiết về bình luận của người dùng trong hệ thống.</p>
    </div>

    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-section-header">Thông tin cơ bản</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DoctorId" class="control-label">Bác sĩ</label>
                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
                        <option value="">-- Chọn bác sĩ --</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Username" class="control-label">Tên người dùng</label>
                    <input asp-for="Username" class="form-control" placeholder="Nhập tên người dùng" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section-header">Nội dung bình luận</div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="CommentText" class="control-label">Nội dung</label>
                    <textarea asp-for="CommentText" class="form-control" rows="4" placeholder="Nhập nội dung bình luận"></textarea>
                    <span asp-validation-for="CommentText" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section-header">Thông tin hệ thống</div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CreatedAt" class="control-label">Ngày tạo</label>
                    <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-back">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

