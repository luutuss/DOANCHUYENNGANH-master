@model IEnumerable<WebsiteDental.Models.AboutDental>
@{
    ViewData["Title"] = "Quản lý Thông tin Nha khoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-intro {
        margin-bottom: 5px; /* Giảm khoảng cách */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin */
    }

        .table-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px; /* Giảm padding */
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px; /* Giảm kích thước chữ */
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px; /* Giảm padding */
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px; /* Giảm padding */
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
        display: flex;
        gap: 3px;
    }

        .action-links a {
            display: inline-block;
            padding: 4px 6px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 12px;
            color: white;
        }

    .btn-edit {
        background-color: #ffc107;
    }

    .btn-details {
        background-color: #17a2b8;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .action-links a:hover {
        opacity: 0.9;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .thumbnail-img {
        width: 35px;
        height: 35px;
        border-radius: 4px;
        object-fit: cover;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý Thông tin Cửa hàng</h4>
        <p>Cập nhật thông tin, mô tả và hình ảnh giới thiệu về dịch vụ.</p>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h5>Danh sách thông tin</h5>
            <a asp-action="Create" class="create-btn">
                <i class="fa fa-plus-circle"></i> Thêm mới
            </a>
        </div>
        <table class="compact-table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mô tả</th>
                    <th>Icon</th>
                    <th>Ảnh</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>
                            <div style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                {
                                    @(item.Description.Substring(0, 50) + "...")
                                }
                                else
                                {
                                    @item.Description
                                }
                            </div>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.IconPath))
                            {
                                <i class="@item.IconPath"></i>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" alt="Ảnh" class="thumbnail-img" />
                            }
                        </td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-inactive">Ẩn</span>
                            }
                        </td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit" title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-details" title="Chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete" title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>