@model WebsiteDental.Models.BlogCategory
@{
    ViewData["Title"] = "Xóa danh mục bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #dc3545;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #6c757d;
        }

    .delete-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
        border-left: 4px solid #dc3545;
    }

    .delete-warning {
        background-color: #fff8f8;
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #f5c6cb;
    }

        .delete-warning i {
            color: #dc3545;
            margin-right: 8px;
            font-size: 18px;
        }

        .delete-warning strong {
            color: #dc3545;
        }

    .delete-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #e9ecef;
    }

        .delete-header h5 {
            margin: 0;
            font-weight: 600;
            color: #1a3b5d;
        }

    .delete-item {
        margin-bottom: 15px;
        border-bottom: 1px dashed #e9ecef;
        padding-bottom: 15px;
    }

        .delete-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    .delete-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 5px;
    }

    .delete-value {
        color: #212529;
    }

    .badge {
        display: inline-block;
        padding: 0.25em 0.6em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .badge-success {
        color: #fff;
        background-color: #28a745;
    }

    .badge-danger {
        color: #fff;
        background-color: #dc3545;
    }

    .btn {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.15s ease-in-out;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: white;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Xóa danh mục bài viết</h4>
        <p>Xác nhận xóa danh mục bài viết này khỏi hệ thống.</p>
    </div>

    <div class="delete-container">
        <div class="delete-warning">
            <i class="fa fa-exclamation-triangle"></i>
            <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Khi xóa danh mục, tất cả dữ liệu liên quan cũng có thể bị ảnh hưởng.
        </div>

        <div class="delete-header">
            <h5>Thông tin danh mục sẽ bị xóa</h5>
          
        </div>

        <div class="delete-item">
            <div class="delete-label">Mã danh mục</div>
            <div class="delete-value">@Model.Id</div>
        </div>

        <div class="delete-item">
            <div class="delete-label">Tên danh mục</div>
            <div class="delete-value">@Model.CategoryName</div>
        </div>

 

        <div class="delete-item">
            <div class="delete-label">Trạng thái</div>
            <div class="delete-value">
                @if (Model.IsActive == true)
                {
                    <span class="badge badge-success">Đang hoạt động</span>
                }
                else
                {
                    <span class="badge badge-danger">Không hoạt động</span>
                }
            </div>
        </div>

       
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="action-buttons">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                    <i class="fa fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>