@model WebsiteDental.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px;
        padding: 15px 20px 0 20px;
    }

    .page-intro {
        margin-bottom: 15px;
    }

        .page-intro h4 {
            margin-top: 0;
            margin-bottom: 5px;
            color: #1a3b5d;
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
            color: #6c757d;
        }

    .form-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 20px;
        margin-bottom: 20px;
    }

        .form-container h5 {
            color: #1a3b5d;
            margin-top: 0;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
        }

    .form-section {
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #1a3b5d;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 5px;
            display: block;
            color: #495057;
        }

    .form-control {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #1a3b5d;
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(26, 59, 93, 0.25);
        }

    .form-check-input {
        margin-top: 0.3rem;
    }

    .text-danger {
        color: #dc3545;
        font-size: 80%;
        margin-top: 5px;
        display: block;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #1a3b5d;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2c5282;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        color: #1a3b5d;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .preview-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
        border: 1px solid #ddd;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper {
            margin-left: 0;
            padding: 10px;
        }
    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý người dùng</h4>
        <p>Chỉnh sửa thông tin chi tiết, quyền và trạng thái của người dùng.</p>
    </div>

    <div class="form-container">
        <h5>Chỉnh sửa thông tin người dùng</h5>

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-8">
                    <!-- Thông tin cơ bản -->
                    <div class="form-section">
                        <div class="form-section-title">Thông tin cơ bản</div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Username">Tên người dùng</label>
                                    <input asp-for="Username" class="form-control" placeholder="Nhập tên người dùng" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone">Số điện thoại</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Address">Địa chỉ</label>
                                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bảo mật và quyền truy cập -->
                    <div class="form-section">
                        <div class="form-section-title">Bảo mật và quyền truy cập</div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password">Mật khẩu</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập để thay đổi mật khẩu" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">Để trống nếu không muốn thay đổi mật khẩu</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RoleId">Vai trò</label>
                                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IsActive">Trạng thái</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               id="IsActive" name="IsActive"
                                               value="true" @(Model.IsActive == true ? "checked" : "") />
                                        <label class="form-check-label" for="IsActive">
                                            Tài khoản đang hoạt động
                                        </label>
                                    </div>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Ảnh đại diện và thời gian -->
                    <div class="form-section">
                        <div class="form-section-title">Ảnh đại diện</div>
                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <img src="@Model.Avatar" class="preview-avatar" id="avatar-preview" alt="Avatar" />
                            }
                            else
                            {
                                <img src="/images/default-avatar.png" class="preview-avatar" id="avatar-preview" alt="Avatar" />
                            }
                        </div>
                        <div class="form-group">
                            <label asp-for="Avatar">Đường dẫn ảnh</label>
                            <input asp-for="Avatar" class="form-control" id="avatar-input" />
                            <span asp-validation-for="Avatar" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-section-title">Thông tin thời gian</div>
                        <div class="form-group">
                            <label asp-for="CreatedAt">Ngày tạo</label>
                            <input asp-for="CreatedAt" class="form-control" readonly />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedAt">Lần cập nhật cuối</label>
                            <input asp-for="UpdatedAt" class="form-control" readonly />
                            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="btn-container">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Hiển thị xem trước ảnh đại diện khi thay đổi đường dẫn
            $("#avatar-input").on("change", function() {
                const imageUrl = $(this).val();
                if (imageUrl) {
                    $("#avatar-preview").attr("src", imageUrl);
                } else {
                    $("#avatar-preview").attr("src", "/images/default-avatar.png");
                }
            });
        });
    </script>
}