@model IEnumerable<WebsiteDental.Models.BlogPost>

@{
    ViewData["Title"] = "Danh sách bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .content-wrapper {
        margin-left: 230px; /* Đẩy nội dung sang phải để tránh thanh sidebar */
        padding: 15px 20px 0 20px; /* Giảm padding phía trên */
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin bottom */
        padding-bottom: 5px; /* Giảm padding bottom */
        border-bottom: 1px solid #e0e0e0;
    }

    .page-intro {
        margin-bottom: 5px; /* Giảm khoảng cách */
    }

        .page-intro h4 {
            margin-top: 0; /* Loại bỏ margin top */
            margin-bottom: 5px; /* Giảm margin bottom */
        }

        .page-intro p {
            margin-top: 0;
            margin-bottom: 10px;
        }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px; /* Giảm margin */
    }

        .table-header h5 {
            margin: 0; /* Loại bỏ margin mặc định */
        }

    .table-container {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        padding: 10px; /* Giảm padding */
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .compact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px; /* Giảm kích thước chữ */
    }

        .compact-table thead {
            background-color: #f8f9fa;
        }

        .compact-table th {
            padding: 8px; /* Giảm padding */
            color: #495057;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .compact-table td {
            padding: 6px 8px; /* Giảm padding */
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .compact-table tbody tr:hover {
            background-color: rgba(0,123,255,0.04);
        }

    .create-btn {
        display: inline-block;
        background-color: #1a3b5d;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
        font-size: 14px;
        white-space: nowrap;
    }

        .create-btn:hover {
            background-color: #2c5282;
            color: white;
        }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            display: inline-block;
            margin: 0 3px;
            padding: 4px 6px;
            border-radius: 4px;
            text-decoration: none;
            color: #1a3b5d;
        }

            .action-links a:hover {
                background-color: #f0f0f0;
            }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d32;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
        padding: 3px 6px;
        border-radius: 12px;
        font-size: 11px;
        white-space: nowrap;
    }

    .blog-img {
        width: 35px;
        height: 35px;
        border-radius: 4px;
        object-fit: cover;
    }

    .truncate {
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* Đáp ứng thiết bị di động */
    @@media (max-width: 992px) {
        .content-wrapper

    {
        margin-left: 0;
        padding: 10px;
    }

    }
</style>

<div class="content-wrapper">
    <div class="page-intro">
        <h4>Quản lý thông tin bài viết blog một cách dễ dàng và hiệu quả</h4>
        <p>Cập nhật nội dung, hình ảnh và trạng thái hoạt động nhanh chóng.</p>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h5>Danh sách bài viết</h5>
            <a asp-action="Create" class="create-btn">
                <i class="fa fa-plus-circle"></i> Thêm mới
            </a>
        </div>
            <div style="margin-bottom: 10px;">
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tên..." onkeyup="filterTable()" style="width: 100%; padding: 6px; border: 1px solid #ced4da; border-radius: 4px;">
            </div>
        <table class="compact-table">
            <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Mô tả</th>
                        <th>Lượt xem</th>
                        <th>Tác giả</th>
                        <th>Chuyên mục</th>
                        <th>Ngày tạo</th>
                        <th>Ảnh đại diện</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="truncate">
                                @Html.DisplayFor(modelItem => item.Title)
                            </div>
                        </td>
                        <td>
                            <div class="truncate">
                                @Html.DisplayFor(modelItem => item.Description)
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ViewCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Id)
                        </td>
                        <td>
                            @(item.CreatedAt != null ? item.CreatedAt?.ToString("dd/MM/yyyy") : "Chưa có")
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.FeaturedImage))
                            {
                                <img src="@item.FeaturedImage" alt="@item.Title" class="blog-img" />
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-inactive">Ngừng hoạt động</span>
                            }
                        </td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
    <script>
             function filterTable() {
            var input, filter, table, tr, tdName, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.querySelector(".compact-table"); // Chọn bảng bằng class thay vì id
            tr = table.getElementsByTagName("tr");

            // Bắt đầu từ i = 1 để bỏ qua hàng tiêu đề
            for (i = 1; i < tr.length; i++) {
                // Lấy ô đầu tiên chứa tên sản phẩm (index 0)
                tdName = tr[i].getElementsByTagName("td")[0];

                if (tdName) {
                    txtValue = tdName.textContent || tdName.innerText;

                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>